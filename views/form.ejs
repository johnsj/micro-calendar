<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Ugeplan</title>
    <!-- Include external CSS. -->
    <link href="/bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.25.0/codemirror.min.css"> -->

    <!-- Include Editor style. -->
    <link href="/bower_components/froala-wysiwyg-editor/css/froala_editor.pkgd.min.css" rel="stylesheet" type="text/css" />
    <link href="/bower_components/froala-wysiwyg-editor/css/froala_style.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <h1 class="title">Uge Plan</h1>
    <form class="" action="/save" method="post">
      <input type="submit" value="Gem">
      <table class="week">
        <thead>
          <tr>
            <td>Uge: <%- weeknumber %></td>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <span class="day">Mandag</span>
              <div class="ta-wrapper">
                <textarea name="mandag" rows="8" cols="80"><%- week.mandag%></textarea>
              </div>
            </td>
          </tr>
          <tr>
            <td>
              <span class="day">Tirsdag</span>
              <div class="ta-wrapper">
                <textarea name="tirsdag" rows="8" cols="80"><%- week.tirsdag%></textarea>
              </div>
            </td>
          </tr>
          <tr>
            <td>
              <span class="day">Onsdag</span>
              <div class="ta-wrapper">
                <textarea name="onsdag" rows="8" cols="80"><%- week.onsdag%></textarea>
              </div>
            </td>
          </tr>
          <tr>
            <td>
              <span class="day">Torsdag</span>
              <div class="ta-wrapper">
                <textarea name="torsdag" rows="8" cols="80"><%- week.torsdag%></textarea>
              </div>
            </td>
          </tr>
          <tr>
            <td>
              <span class="day">Fredag</span>
              <div class="ta-wrapper">
                <textarea name="fredag" rows="8" cols="80"><%- week.fredag%></textarea>
              </div>
            </td>
          </tr>
          <tr>
            <td>
              <span class="day">Lørdag</span>
              <div class="ta-wrapper">
                <textarea name="lordag" rows="8" cols="80"><%- week.lordag%></textarea>
              </div>
            </td>
          </tr>
          <tr>
            <td>
              <span class="day">Søndag</span>
              <div class="ta-wrapper">
                <textarea name="sondag" rows="8" cols="80"><%- week.sondag%></textarea>
              </div>
            </td>
          </tr>
        </tbody>
      </table>
    </form>
    <!-- Include external JS libs. -->
    <script type="text/javascript" src="/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.25.0/codemirror.min.js"></script> -->
    <!-- <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.25.0/mode/xml/xml.min.js"></script> -->

    <!-- Include Editor JS files. -->
    <script type="text/javascript" src="/bower_components/froala-wysiwyg-editor/js/froala_editor.pkgd.min.js"></script>

    <!-- Initialize the editor. -->
    <script type="text/javascript">
      // $(function() { $('textarea').froalaEditor() });
      $(function() {
        $('textarea').froalaEditor({
           // Set custom buttons with separator between them.
          //  toolbarButtons: ['undo', 'redo' , '|', 'bold', 'italic', 'underline', 'strikeThrough', 'subscript', 'superscript', 'outdent', 'indent', 'clearFormatting', 'insertTable', 'html'],
           toolbarButtons: ['undo', 'redo' , '|', 'bold', 'italic', 'underline', 'strikeThrough', 'outdent', 'indent', 'clearFormatting', 'insertTable', 'html'],
           toolbarButtonsXS: ['undo', 'redo' , '-', 'bold', 'italic', 'underline']
       })
      });
    </script>
  </body>
</html>
